<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head.ejs") %>
  <body>
    <div class="container">
      <%- include("partials/navbar.ejs") %>

      <h1><%- post.title %></h1>
      <p>by <%- post.author %> (<%- post.category %>)</p>
      <p><%- post.body %></p>

      <h1>Comment:</h1>
      <%- comment? null : 'No comment' %> <% comment.forEach(function(comment) {
      %>
      <div class="comment mt-1">
        <%- comment["message"] %> <br />
        by <%- comment["author"] %>
      </div>
      <% }) %>

      <h1 class="mt-2">Leave comment</h1>
      <form method="post" action="/posts/<%- post['id'] %>/show">
        <div class="form-group">
          <label for="author">Author</label>
          <input
            type="text"
            name="author"
            class="form-control"
            id="author"
            placeholder="John"
            required
          />
        </div>
        <div class="form-group">
          <label for="message">Message</label>
          <textarea
            name="message"
            class="form-control"
            id="message"
            rows="3"
            required
          ></textarea>
        </div>
        <button type="submit" class="btn btn-primary mt-2">
          Leave comment
        </button>
      </form>
    </div>

    <!-- JavaScript -->
    <script src="/jquery/jquery.min.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>
  </body>
</html>
