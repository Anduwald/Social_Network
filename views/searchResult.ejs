<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head.ejs") %>
  <body>
    <div class="container">
      <%- include("partials/navbar.ejs") %>

      <div>
        <h1>Search result:</h1>
        <p>See <a href="/people">all people</a></hp>
        <% if (users !== undefined) users.forEach(function(user) { %>
        <div class="profile-block mt-3">
          <a href="/user/<%- user.id %>">
            <img class="avatar" src="/img/<%- user.avatar_name %>" alt="" />
            <h5><%- user.name %> <%- user.surname %></h5>
          </a>
        </div>
        <% }) %>
      </div>
    </div>
    <!-- JavaScript -->
    <script src="/jquery/jquery.min.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>
  </body>
</html>
